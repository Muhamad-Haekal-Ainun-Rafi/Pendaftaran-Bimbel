<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="24dp"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:ignore="ExtraText"
    tools:context="com.lailatul.bimbel.Pendaftaran.PendaftaranActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"

                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/logo_daftar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/logo_imk"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/judul_daftar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:gravity="center_horizontal"
                        android:text="PENDAFTARAN "
                        android:textColor="#6ac8f0"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:text="Nama Lengkap"

                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_namalkp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Lengkap"
                        android:inputType="text"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:text="Nama Panggilan"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_namapgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Panggilan"
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/rb_lk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Laki-Laki" />

                        <RadioButton
                            android:id="@+id/rb_pr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Perempuan" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Lahir"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_tgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DD/MM/YYYY"
                        android:inputType="date" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Ayah"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_ayah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Ayah" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Telpon"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_telpon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No Telpon"
                        android:inputType="phone" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kabupaten/Kota"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_kab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kabupaten/Kota" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provinsi"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_prov"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Provinsi" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asal Sekolah"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_sekolah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Asal Sekolah" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paket Bimbel"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_paket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Paket Bimbel" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_save_lab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#d67601"
                    android:text="Daftar"

                    android:textColor="@color/putih"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_cancel_lab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#d67601"
                    android:text="Cancel"

                    android:textColor="@color/putih"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>